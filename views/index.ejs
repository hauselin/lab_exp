<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Anthrope</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="../public/assets/css/loaders/loader-typing.css" rel="stylesheet" type="text/css" media="all" />
  <link href="../public/assets/css/theme.css" rel="stylesheet" type="text/css" media="all" />
  <!-- <link rel="preload" as="font" href="../public/assets/fonts/Inter-UI-upright.var.woff2" type="font/woff2" , crossorigin="anonymous"> -->
  <!-- <link rel="preload" as="font" href="../public/assets/fonts/Inter-UI.var.woff2" type="font/woff2" , crossorigin="anonymous"> -->
</head>

<body style="overflow-x: hidden; " data-smooth-scroll-offset="73">
  <div class="loader">
    <div class="loading-animation"></div>
  </div>

  <%- include('partials/menu_bar_index') %>

  <section data-overlay class="bg-primary text-light o-hidden position-relative">
    <div class="min-vh-70 o-hidden d-flex flex-column justify-content-center">
      <div class="container">
        <div class="row justify-content-center text-center align-items-center">
          <div class="col-xl-8 col-lg-9 col-md-10 layer-3" data-aos="fade-up" data-aos-delay="500">
            <h1 class="display-3">
              Anthrope
            </h1>
            <div class="mb-4">
              <p class="lead px-xl-5">
                for science
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-primary-alt" id="surveys">
    <div class="container">
      <div class="row justify-content-center text-center mb-6">
        <div class="col-xl-8 col-lg-9">
          <h2 class="display-4 mx-xl-6">Surveys</h2>
          <a href="/surveys">
            <p>See more ></p>
          </a>
          <p class="lead">
            Answer some questions and check out your data.
          </p>
        </div>
      </div>
    </div>
    <div class="arrows-inside highlight-selected mb-6"
      data-flickity='{ "autoPlay": true, "imagesLoaded": true, "wrapAround": true }'>

      <% for(var i = 0; i < surveys.length; i++) { %>
      <% var image_link =  "../public/assets/img/surveys/" + surveys[i].uniquestudyid + ".jpg" %>
      <% var study_link =  "/surveys/" + surveys[i].uniquestudyid + "/" %>
      <div class="carousel-cell col-lg-3 col-md-5 col-9 px-2 py-3">
        <p style="text-align: center; font-size: large; font-weight: bold;">
          <%= surveys[i].name %>
        </p>
        <a href=<%=study_link%>>
          <img style="width:100%; height: 100%; object-fit: cover;" src=<%=image_link%> alt=""
            class="rounded shadow-3d hover-shadow-3d border">
        </a>
        <p style="text-align: center; font-size: large; font-weight: bold;">
          <%= surveys[i].description %>
        </p>
      </div>
      <% } %>

    </div>
  </section>

  <section class="text-center" id="tasks">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-9">
          <h2 class="h1">Tasks</h2>
          <a href="/tasks">
            <p>See more ></p>
          </a>
        </div>
      </div>
    </div>
  </section>
  <section class="pt-0">
    <div class="container">
      <div class="row">

        <% for(var i = 0; i < tasks.length; i++) { %>
        <% var image_link =  "../public/assets/img/tasks/" + shuffled_tasks[i].uniquestudyid + ".jpg" %>
        <% var study_link =  "/tasks/" + shuffled_tasks[i].uniquestudyid + "/" %>
        <div class="col-md-6 col-lg-4">
          <div class="card" data-aos="fade-up" data-aos-delay="<%=(i%3+1)*200%>">
            <a href=<%=study_link%>>
              <img style="width:100%; height: 250px; object-fit:cover;" src=<%=image_link%> alt="Image"
                class="card-img-top">
            </a>
            <div class="card-body align-items-start" style="height: 175px;">
              <div class="card-title"><b><%=shuffled_tasks[i].name%></b></div>
              <div class="card-text"><%=shuffled_tasks[i].description%></div>
            </div>
            <div class="card-footer" style="padding: 10px; padding-left: 20px;"><a style="color: #3366BB;" href=<%=study_link%>>Go to task</a></div>
          </div>
        </div>
        <% } %>

      </div>
    </div>
  </section>


  <section class="bg-primary" id="studies">
    <div class="container">
      <div class="row justify-content-center text-center text-light mb-4">
        <div class="col">
          <h3 class="h1">Studies</h3>
          <a href="/studies">
            <p>See more ></p>
          </a>
        </div>
      </div>
      <div class="row">

        <% for(var i = 0; i < studies.length; i++) { %>
        <% var image_link =  "../public/assets/img/studies/" + studies[i].uniquestudyid + ".svg" %>
        <% var study_link =  "/studies/" + studies[i].uniquestudyid + "/" %>
        <div class="col-sm-6 col-lg-4" data-aos="fade-up" data-aos-delay="100">
          <a class="card card-sm card-body flex-row align-items-center fade-page hover-shadow-3d" href=<%=study_link%>>
            <img class="icon icon-lg
          bg-primary-2" src=<%=image_link%> alt="icon" />
            <div class="ml-3">
              <h5 class="mb-0"><%=studies[i].name%></h5>
              <span><%=studies[i].description%></span>
            </div>
          </a>
        </div>
        <% } %>

      </div>
    </div>
  </section>

  <section>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-9">
          <h3 class="h2">FAQ</h3>
          <div class="my-4">
            <div class="card mb-2 card-sm card-body hover-shadow-sm" data-aos="fade-up" data-aos-delay="NaN">
              <div data-target="#panel-1" class="accordion-panel-title" data-toggle="collapse" role="button"
                aria-expanded="false" aria-controls="panel-1">
                <span class="h6 mb-0">Who are we?</span>
                <img class="icon" src="../public/assets/img/icons/interface/plus.svg" alt="plus interface icon" />
              </div>
              <div class="collapse" id="panel-1">
                <div class="pt-3">
                  <p>Anthropes.</p>

                </div>
              </div>
            </div>
            <div class="card mb-2 card-sm card-body hover-shadow-sm" data-aos="fade-up" data-aos-delay="NaN">
              <div data-target="#panel-2" class="accordion-panel-title" data-toggle="collapse" role="button"
                aria-expanded="false" aria-controls="panel-2">
                <span class="h6 mb-0">1+1=3?</span>
                <img class="icon" src="../public/assets/img/icons/interface/plus.svg" alt="plus interface icon" />
              </div>
              <div class="collapse" id="panel-2">
                <div class="pt-3">
                  <p>No.</p>

                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>